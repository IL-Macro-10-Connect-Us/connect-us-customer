<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ConnectUs" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">@color/black</item>
        <!-- Navigation bar color. -->
        <item name="android:navigationBarColor">@color/white</item>
    </style>

    <style name="ButtonWithIconOnly" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="minWidth">48dp</item>
        <item name="minHeight">48dp</item>
    </style>

    <style name="primaryBtn">
        <item name="android:backgroundTint">@color/purple_700</item>
        <item name="android:fontFamily">@font/inter_semi_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textSize">16sp</item>
        <item name="cornerRadius">8dp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="googleBtn">
        <item name="backgroundTint">@color/white</item>
        <item name="android:fontFamily">@font/inter_semi_bold</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/gray_700</item>
        <item name="cornerRadius">8dp</item>
        <item name="textAllCaps">false</item>
        <item name="strokeColor">@color/gray_300</item>
        <item name="strokeWidth">1dp</item>
    </style>
</resources>